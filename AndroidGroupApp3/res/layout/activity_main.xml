<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37FDFC"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.nyul.androidgroupapp3.daguessingame.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ScrollView>

    <Button
        android:id="@+id/decrypt_2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decrypt_1"
        android:layout_alignBottom="@+id/decrypt_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:text="103"
        android:textColor="#008000" />
		        
    <Button
        android:id="@+id/encrypt_2"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/decrypt_2"
        android:layout_below="@+id/scrollView1"
        android:layout_marginTop="90dp"
        android:onClick="onClick"
        android:text="103"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/encrypt_1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/encrypt_2"
        android:layout_alignBottom="@+id/encrypt_2"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:text="79"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/decrypt_1"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/encrypt_1"
        android:layout_below="@+id/encrypt_1"
        android:layout_marginTop="81dp"
        android:onClick="onClick"
        android:text="79"
        android:textColor="#008000" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/encrypt_1"
        android:layout_alignBottom="@+id/encrypt_1"
        android:layout_marginLeft="91dp"
        android:layout_toRightOf="@+id/encrypt_1"
        android:text="Secretize"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decrypt_1"
        android:layout_alignBottom="@+id/decrypt_1"
        android:layout_alignLeft="@+id/textView1"
        android:text="Desecretize"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000" />

</RelativeLayout>